/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    
    "emitDecoratorMetadata": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": ".",
    
    "paths": {
      "shared-lib": ["projects/shared-lib/src/public-api.ts"],
      "shared-lib/*": ["projects/shared-lib/src/lib/*"]
    }
    
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },

  "rootDir": ".",
  "files": [],
  "references": [
    {
      "path": "./projects/website/tsconfig.app.json"
    },
    {
      "path": "./projects/website/tsconfig.spec.json"
    },
    {
      "path": "./projects/mobile-app/tsconfig.app.json"
    },
    {
      "path": "./projects/mobile-app/tsconfig.spec.json"
    },
    {
      "path": "./projects/console-panel/tsconfig.app.json"
    },
    {
      "path": "./projects/console-panel/tsconfig.spec.json"
    }
  ]
}
